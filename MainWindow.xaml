<Window x:Class="Metronome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metronome"
        mc:Ignorable="d"
        Title="Metronome" Height="411" Width="484" HorizontalAlignment="Left" Icon="Resources/Icon.ico" ResizeMode="NoResize">
    <Canvas>

        <Grid Height="342" Canvas.Top="30" Width="468">
            <Button Content="Stop" HorizontalAlignment="Left" Margin="240,165,0,77" Height="100" Width="185" Click="Stop_Click" FontSize="36"/>
            <Button Content="Start" HorizontalAlignment="Left" Margin="40,165,0,77" Height="100" Width="185" Click="Start_Click" FontSize="36"/>

            <TextBox x:Name="txtMilliseconds" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top" Height="75" Width="385" TextChanged="textBox_TextChanged" FontSize="48"/>
            <TextBlock HorizontalAlignment="Left" Margin="216,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.408,-0.312"/>
        </Grid>

    </Canvas>

</Window>
